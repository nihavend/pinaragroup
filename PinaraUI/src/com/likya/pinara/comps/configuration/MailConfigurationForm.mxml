							<s:ArrayList>                    
								<s:GridColumn dataField="mailinfo" headerText="{resourceManager.getString('messages', 'mailList')}" id="mailGridCol">
									<s:itemRenderer>
										<fx:Component>
											<s:GridItemRenderer>
												<s:Label id="labelDisplay"
